<Window x:Class="BibliotecaWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BibliotecaWPF"
        mc:Ignorable="d"
        Title="Librería"
        Height="450"
        Width="600"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        Background="LightGray"
        Loaded="Window_Loaded">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ComboBox de IDs -->
        <StackPanel Orientation="Horizontal"
                    Margin="0 0 0 10">
            <TextBlock Text="Selecciona ID: "
                       VerticalAlignment="Center"/>
            <ComboBox x:Name="cbLibros"
                      Width="100"
                      SelectionChanged="cbLibros_SelectionChanged"/>
        </StackPanel>

        <!-- Detalles del libro -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                <TextBlock Text="ID:"/>
                <TextBox x:Name="txtId"
                         IsReadOnly="True"/>

                <TextBlock Text="Título:"/>
                <TextBox x:Name="txtTitulo"/>

                <TextBlock Text="Autor:"/>
                <TextBox x:Name="txtAutor"/>

                <TextBlock Text="Año:"/>
                <TextBox x:Name="txtAnio"/>



                <!-- ComboBox Genero -->
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="5">
                    <TextBlock Text="Género:"
                               VerticalAlignment="Center"
                               Margin="0,0,3,0"/>
                    <ComboBox x:Name="cbGenero"
                              Width="475"
                              HorizontalAlignment="Left">
                        <ComboBoxItem>Realismo mágico</ComboBoxItem>
                        <ComboBoxItem>Novela</ComboBoxItem>
                        <ComboBoxItem>Infantil</ComboBoxItem>
                        <ComboBoxItem>Distopía</ComboBoxItem>
                        <ComboBoxItem>Romance</ComboBoxItem>
                        <ComboBoxItem>Fantasía</ComboBoxItem>
                        <ComboBoxItem>Aventura</ComboBoxItem>
                        <ComboBoxItem>Misterio</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
            </StackPanel>

        </ScrollViewer>

        <!-- Botones CRUD -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">
            <Button Content="Insertar"
                    Width="100"
                    Margin="5"
                    Click="btnInsertar_Click"/>
            <Button Content="Actualizar"
                    Width="100"
                    Margin="5"
                    Click="btnActualizar_Click"/>
            <Button Content="Eliminar"
                    Width="100"
                    Margin="5"
                    Click="btnEliminar_Click"/>
            <Button Content="Limpiar"
                    Width="100"
                    Margin="5"
                    Click="btnLimpiar_Click"/>
        </StackPanel>
    </Grid>
</Window>